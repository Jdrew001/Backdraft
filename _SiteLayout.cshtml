<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@Page.Title - Backdraft Movers</title>
        <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/Carousel.css" rel="stylesheet" type="text/css" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link rel="stylesheet" id="font-awesome-css" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" type="text/css" media="screen">
        <script src="~/Scripts/jquery-2.1.4.min.js"></script>
        <script src="~/Scripts/modernizr-2.6.2.js"></script>
        
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <!--Begin Header-->
        <header>
            <section class="nav-links">
                <!--Company Logo-->
                <article class="company-picture">
                    <p>Picture here</p>
                </article>

                <!--Navigation Links-->
                <nav>
                    <ul>
                        <li><a href="../Index">Home</a></li>
                        <li><a href="About">About Us</a></li>
                        <li><a href="Contact">Contact</a></li>
                        <li><a href="Pricing">Pricing</a></li>
                        <li><a href="Moving-Tips">Moving Tips</a></li>
                    </ul>
                </nav>
            </section>
            <section class="contact-links">
                <article>
                    <!--Contact information-->
                    <ul>
                        <li><strong>Phone:</strong> xxx-xxx-xxxx</span></li>
                        <li><strong>Email:</strong> backdraftmovers@yahoo.com</li>
                    </ul>
                </article>
            </section>
        </header>
        <div id="body">
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <section class="top-footer">
                <article class="about-footer">
                    <img src="~/Content/Images/about.png" alt="About Icon" />
                    <h4>About Us</h4>
                    <p>Backdraft Movers is a local firefighter owned and operated company. We use off duty firefighters along with professional full time staff</p>
                </article>
                <article class="address-footer">
                    <img src="~/Content/Images/Location.png" alt="Location Icon" />
                    <h4>Location</h4>
                    <p>Garland and DFW area</p>
                </article>
                <article class="contact-footer">
                    <img src="~/Content/Images/Phone.png" alt="Contact Icon" />
                    <h4>Contact Us</h4>
                    <p>p: XXX-XXX-XXXX<br />E: backdraftmovers@yahoo.com</p>
                </article>
            </section>
            <section class="bottom-footer">
                <article class="business-hours">
                    <h4>Business Hours</h4>
                    <ul>
                        <li class="hours-heading">Opening Days</li>
                        <li class="list-hours">Monday-Friday: x:xx-x:xx</li>
                        <br />
                        <li class="hours-heading">Vacations</li>
                        <li class="list-hours">Holidays</li>
                        <li class="list-hours">Weekends</li>
                    </ul>
                </article>
                <article></article>
                <article></article>
                <article class="navigation">
                    <h4>Navigation</h4>
                    <ul>
                        <li><a href="Index"><span>&rArr;</span> Home</a></li>
                        <li><a href="About"><span>&rArr;</span> About Us</a></li>
                        <li><a href="Contact"><span>&rArr;</span> Contact</a></li>
                        <li><a href="Pricing"><span>&rArr;</span> Pricing</a></li>
                        <li><a href="Moveing-Tips"><span>&rArr;</span> Moving Tips</a></li>
                    </ul>
                </article>
            </section>
        </footer>
        <a href="#" class="back-to-top">
            <i class="fa fa-arrow-up"></i>
        </a>
        <script>

            $(document).ready(function () {
                var offset = 250;
                var duration = 500;

                $(window).scroll(function () {
                    if ($(this).scrollTop() > offset) {
                        $('.back-to-top').fadeIn(duration);
                    } else {
                        $('.back-to-top').fadeOut(duration);
                    }
                });
                $('.back-to-top').click(function (event) {
                    event.preventDefault();
                    $('html, body').animate({ scrollTop: 0 }, duration);
                    return false;
                });
            });
        </script>
    </body>
</html>